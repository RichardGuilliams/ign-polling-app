extends ../base

block content
    main.main
        .signup-form
            form.form.form--signup
                h2.heading-secondary.ma-bt-lg Create your new account
                .form__group
                    label.form__label(for='name') Name
                    input#signup-name.form__input(type='name', placeholder='Enter new username', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#signup-email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#signup-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='password-confirm') Password Confirm
                    input#signup-password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Sign Up